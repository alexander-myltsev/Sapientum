<Window x:Class="WpfControlLib.DomainZonesDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Доменная зона" Height="450" Width="450" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Label Content="Для всех: " />
            <CheckBox VerticalAlignment="Center" Unchecked="ForAllCheckBoxChanged" Checked="ForAllCheckBoxChanged" />
        </StackPanel>
        <StackPanel Name="stackPanel0" Grid.Column="0" Margin="5,30,5,5">
        </StackPanel>
        <StackPanel Name="stackPanel1" Grid.Column="1" Margin="5,30,5,5">
        </StackPanel>
        <StackPanel Name="stackPanel2" Grid.Column="2" Margin="5,30,5,5">
        </StackPanel>
        <StackPanel Name="stackPanel3" Grid.Column="3" Margin="5,30,5,5">
        </StackPanel>
        <StackPanel Name="stackPanel4" Grid.Column="4" Margin="5,30,5,5">
        </StackPanel>
        <Button HorizontalAlignment="Center" Content="Сохранить" VerticalAlignment="Bottom" Grid.Column="4" Margin="0,0,0,10" Click="SaveButtonClick"></Button>
    </Grid>
</Window>
